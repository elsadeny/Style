<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.CardView
        android:id="@+id/item_card"
        android:background="@color/cardview_dark_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="4dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_img_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_cover_height"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/ico" />

            <TextView
                android:id="@+id/it_name_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_img_1"
                android:paddingLeft="@dimen/item_title_padding"
                android:paddingRight="@dimen/item_title_padding"
                android:paddingTop="@dimen/item_title_padding"
                android:text="Item Name"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/it_price_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/it_name_1"
                android:paddingBottom="@dimen/item_price_padding_bottom"
                android:paddingLeft="@dimen/item_title_padding"
                android:paddingRight="@dimen/item_title_padding"
                android:text="Item price"
                android:textSize="25dp" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>